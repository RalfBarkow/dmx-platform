{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": "standard",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "indent": ["error", 2, {
      "ignoreComments": true
    }],
    "key-spacing": ["error", {"mode": "minimum"}],
    "multiline-ternary": "off",
    "no-multi-spaces": "off",
    "object-curly-spacing": ["error", "never"],
    "operator-linebreak": ["error", "after", {"overrides": {"?": "before", "|>": "before"}}],
    "padded-blocks": "off"
  }
}
