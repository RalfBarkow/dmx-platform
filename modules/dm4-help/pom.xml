<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <modelVersion>4.0.0</modelVersion>

    <name>DeepaMehta 4 Help</name>
    <groupId>de.deepamehta</groupId>
    <artifactId>deepamehta-help</artifactId>
    <version>4.2-SNAPSHOT</version>
    <packaging>bundle</packaging>

    <parent>
        <groupId>de.deepamehta</groupId>
        <artifactId>deepamehta-parent</artifactId>
        <version>5</version>
        <relativePath>../dm4-parent/pom.xml</relativePath>
    </parent>

    <properties>
        <!-- Note: ${maven.build.timestamp} is not substituted in filtered resources. This is a Maven bug.          -->
        <!-- http://jira.codehaus.org/browse/MRESOURCES-99                                                          -->
        <!-- A workaround is to put it in a property and access the property from the filtered resource.            -->
        <!-- http://stackoverflow.com/questions/13228472/how-to-acces-maven-build-timestamp-for-resource-filtering  -->
        <build.date>${maven.build.timestamp}</build.date>
        <maven.build.timestamp.format>MMM d, yyyy</maven.build.timestamp.format> <!-- default is "yyyyMMdd-HHmm"    -->
    </properties>        

    <build>
        <resources>
            <resource>
                <directory>src/main/resources</directory>
                <filtering>false</filtering>
                <excludes>
                    <exclude>web/script/plugin.js</exclude>
                </excludes>
            </resource>
            <resource>
                <directory>src/main/resources</directory>
                <filtering>true</filtering>
                <includes>
                    <include>web/script/plugin.js</include>
                </includes>
            </resource>
        </resources>
    </build>
</project>
